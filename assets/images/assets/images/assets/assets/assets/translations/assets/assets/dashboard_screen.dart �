import 'package:flutter/material.dart';
import '../services/language_loader.dart';
import 'prediction_screen.dart';
import 'history_screen.dart';
import 'subscription_screen.dart';
import 'config_screen.dart';

class DashboardScreen extends StatelessWidget {
  final Function(Locale) onLocaleChange;

  const DashboardScreen({super.key, required this.onLocaleChange});

  @override
  Widget build(BuildContext context) {
    final t = LanguageLoader.of(context);

    return Scaffold(
      backgroundColor: Colors.black,
      appBar: AppBar(
        title: Text(t['painel'] ?? 'Painel Principal'),
        backgroundColor: Colors.black87,
        centerTitle: true,
        actions: [
          IconButton(
            icon: const Icon(Icons.settings, color: Colors.amber),
            tooltip: t['configuracoes'] ?? 'Configurações',
            onPressed: () {
              Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) =>
                      ConfigScreen(onLocaleChange: onLocaleChange),
                ),
              );
            },
          ),
        ],
      ),
      body: Center(
        child: Padding(
          padding: const EdgeInsets.all(24.0),
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              _buildAnimatedButton(
                context,
                icon: Icons.analytics,
                label: t['nova_previsao'] ?? 'Nova Previsão',
                onTap: () {
                  Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => const PredictionScreen(),
                    ),
                  );
                },
              ),
              const SizedBox(height: 20),
              _buildAnimatedButton(
                context,
                icon: Icons.history,
                label: t['historico'] ?? 'Histórico de Análises',
                onTap: () {
                  Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => const HistoryScreen(),
                    ),
                  );
                },
              ),
              const SizedBox(height: 20),
              _buildAnimatedButton(
                context,
                icon: Icons.star,
                label: t['assinatura'] ?? 'Assinatura',
                onTap: () {
                  Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => const SubscriptionScreen(),
                    ),
                  );
                },
              ),
            ],
          ),
        ),
      ),
    );
  }

  Widget _buildAnimatedButton(
    BuildContext context, {
    required IconData icon,
    required String label,
    required VoidCallback onTap,
  }) {
    return InkWell(
      onTap: onTap,
      borderRadius: BorderRadius.circular(12),
      splashColor: Colors.amber.withOpacity(0.3),
      child: Ink(
        decoration: BoxDecoration(
          borderRadius: BorderRadius.circular(12),
          border: Border.all(color: Colors.amber, width: 1.4),
          gradient: const LinearGradient(
            colors: [Color(0xFF1C1C1E), Color(0xFF101010)],
            begin: Alignment.topLeft,
            end: Alignment.bottomRight,
          ),
        ),
        child: Padding(
          padding: const EdgeInsets.symmetric(vertical: 18.0, horizontal: 22.0),
          child: Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(icon, color: Colors.amberAccent),
              const SizedBox(width: 14),
              Text(
                label,
                style: const TextStyle(
                  color: Colors.amberAccent,
                  fontSize: 18,
                  fontWeight: FontWeight.w600,
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}
