from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from pydantic import BaseModel

app = FastAPI(title="VoxFuture AURYN API", version="1.0.0")

# ğŸ”„ CORS: permite conexÃ£o com o Flutter (frontend)
app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_credentials=True,
    allow_methods=["*"],
    allow_headers=["*"],
)

# ğŸ“¦ Modelo de exemplo (entrada de texto)
class Message(BaseModel):
    text: str

# ğŸ§  Rota principal de teste
@app.get("/")
def read_root():
    return {"message": "ğŸŒŒ AURYN API ativa e pulsando."}

# ğŸ¤– Rota de processamento bÃ¡sico
@app.post("/analyze")
def analyze(msg: Message):
    text = msg.text.lower()
    mood = "positivo" if "amor" in text or "luz" in text else "neutro"
    return {"anÃ¡lise": f"Mensagem recebida: '{msg.text}'", "estado_detectado": mood}

# ğŸ”§ InicializaÃ§Ã£o
if __name__ == "__main__":
