appBar: AppBar(
  title: Text(t['painel'] ?? 'Painel Principal'),
  backgroundColor: Colors.black87,
  centerTitle: true,
  actions: [
    IconButton(
      icon: const Icon(Icons.settings, color: Colors.amber),
      tooltip: t['configuracoes'] ?? 'Configurações',
      onPressed: () {
        Navigator.push(
          context,
          MaterialPageRoute(
            builder: (context) => ConfigScreen(
              onLocaleChange: widget.onLocaleChange,
            ),
          ),
        );
      },
    ),
  ],
),
